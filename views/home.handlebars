<div class="container mx-auto mt-[200px]">
    <h1 class="text-7xl  text-center mb-4">Buscar</h1>
    <form action="/search" method="POST" class="text-center w-1/2 mx-auto">
        <div class="mb-4">
            <input type="text" name="url" placeholder="Insertar la URL" required class="w-full px-6 py-6 border border-gray-300 rounded-md focus:outline-none focus:border-indigo-500">
        </div>
        <div>
            <button type="submit" class="px-4 py-2 bg-indigo-500 text-white rounded-md hover:bg-indigo-600 focus:outline-none focus:bg-indigo-600">Buscar</button>
        </div>
    </form>

    {{#if error}}
        <div class="px-12 py-6 bg-red-300 w-[70%] text-2xl mx-auto mt-10 rounded-lg text-black">
            <p class="text-black">{{error}}</p>
        </div>
    {{/if}}
</div>

<div class="max-w-lg mx-auto bg-white shadow-md rounded-lg overflow-hidden mt-[200px]">
    <div class="p-6 mx-auto">
        <!-- Mensaje de descarga exitosa -->
        <div class="flex items-center justify-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 text-green-500 mr-4" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM4 10a6 6 0 1112 0 6 6 0 01-12 0z" clip-rule="evenodd" />
                <path fill-rule="evenodd" d="M8.38 10.469l1.487 1.487 3.487-3.487 1.487 1.487-4.974 4.974-3.487-3.487 1.487-1.487z" clip-rule="evenodd" />
            </svg>
            {{#IF error}}
             <h2 class="text-3xl font-semibold text-gray-800">{{message}}</h2>
            {{else}}
             <h2 class="text-3xl font-semibold text-gray-800">Descarga exitosa</h2>
            {{/if}}
        </div>
        <!-- InformaciÃ³n adicional -->
        <div class="mt-6">
            <h3 class="text-xl font-semibold text-gray-800">{{ video.title }}</h3>
            <p class="text-sm text-gray-600 mb-2">{{ video.duration }}</p>
            <div class="flex justify-center space-x-4">
                <p class="text-sm text-gray-600">Tipo de descarga: {{ typeText }}</p>
            </div>
        </div>
    </div>
</div>

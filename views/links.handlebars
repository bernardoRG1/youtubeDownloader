      <h1 class="text-2xl font-bold text-center mb-8 mt-[100px]">Lista de Videos</h1>
      <div class="max-w-[80%] mx-auto">
         <a href="/links/addVideo" class="mb-4 px-4 py-2 bg-green-500 text-white rounded hover:bg-green-600 mb-8 inline-block">Añadir video</a>
         <!-- Lista de videos -->
         <div class="mb-12">
               <ul class="flex gap-10 flex-wrap">
                  {{#each videos}}
                  <li>
                     <div class="bg-white rounded-lg p-4 shadow-md w-[350px]">
                           <iframe src="{{iframurl}}"  class="w-full h-[300px]" frameborder="0"></iframe>
                     
                           <div class="mt-4">   
                              <p class="text-lg font-semibold">{{titulo}}</p>
                              <p class="text-gray-600">{{url}}</p>
                              <form action="search/" method="POST">
                                 <input type="hidden" value={{url}} name="url">
                                 <input type="submit" value="Descargar" class="mt-2 px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600 max-w-[100px]" >
                              </form>
                                 <form action="delete/" method="POST">
                                 <input type="hidden" value={{url}} name="url">
                                 <input type="submit" value="Eliminar" class="mt-2 px-4 py-2 bg-red-500 text-white rounded hover:bg-red-600 max-w-[100px]" >
                              </form>
                     
                     
                           </div>
                     </div>
                  </li>
                  {{/each}}
               </ul>
              
         </div>

         <!-- Ejemplo de cartas manuales -->

      </div>

     <style>
      .borde {
         border: 1px solid white;
      }
     </style>


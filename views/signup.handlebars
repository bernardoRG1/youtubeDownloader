<div class="container mx-auto mt-[200px]">
        <h1 class="text-7xl text-center mb-4">Registro</h1>
        <form action="/signup" method="POST" class="text-center w-1/2 mx-auto">
            <div class="mb-4">
                <input type="text" name="name" placeholder="Nombre completo" required class="w-full px-6 py-3 border border-gray-300 rounded-md focus:outline-none focus:border-indigo-500">
            </div>
            <div class="mb-4">
                <input type="email" name="email" placeholder="Correo Electrónico" required class="w-full px-6 py-3 border border-gray-300 rounded-md focus:outline-none focus:border-indigo-500">
            </div>
            <div class="mb-6">
                <input type="password" name="password" placeholder="Contraseña" required class="w-full px-6 py-3 border border-gray-300 rounded-md focus:outline-none focus:border-indigo-500">
            </div>
            <div>
                <button type="submit" class="w-full bg-indigo-500 text-white font-bold py-2 px-4 rounded focus:outline-none focus:bg-indigo-600 hover:bg-indigo-600">Registrarse</button>
            </div>
        </form>

        <div class="text-center mt-4">
            <p class="text-sm text-gray-600">¿Ya tienes una cuenta? <a href="/login" class="text-blue-500 hover:text-blue-600">Inicia sesión</a></p>
        </div>

        {{#if error}}
        <div class="px-12 py-6 bg-red-300 w-[70%] text-2xl mx-auto mt-10 rounded-lg text-black">
            <p class="text-black">{{error}}</p>
        </div>
         {{/if}}
    </div>
